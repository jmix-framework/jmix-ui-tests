<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        caption="msg://disabledVersEntityBrowse.caption"
        focusComponent="disabledVersEntitiesTable">
    <data readOnly="true">
        <collection id="disabledVersEntitiesDc"
                    class="io.jmix.tests.entity.webdav.DisabledVersEntity">
            <fetchPlan extends="_base">
                <property name="file" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="disabledVersEntitiesDl">
                <query>
                    <![CDATA[select e from DisabledVersEntity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <dynattr:dynamicAttributes/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="disabledVersEntitiesTable" spacing="true">
        <filter id="filter"
                dataLoader="disabledVersEntitiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="disabledVersEntitiesTable"
                    width="100%"
                    dataContainer="disabledVersEntitiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="file"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="disabledVersEntitiesTable.create"/>
                <button id="editBtn" action="disabledVersEntitiesTable.edit"/>
                <button id="removeBtn" action="disabledVersEntitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
